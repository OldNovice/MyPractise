<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.MyPractise.AppBarOverlay" />

    <style name="Theme.MyPractise.PopupOverlay"
        parent="Theme.AppCompat.DayNight"/>

    <style name="CollapsingTheme" parent="Theme.MyPractise">
        <!--窗口半透明导航-->
        <item name="android:windowTranslucentNavigation">false</item>
        <!--窗口半透明状态-->
        <item name="android:windowTranslucentStatus">true</item>
        <!--状态栏颜色指定为透明-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!--        &lt;!&ndash; Android 6.0以上 状态栏字色和图标为浅黑色&ndash;&gt;-->
        <!--        <item name="android:windowLightStatusBar">false</item>-->
    </style>

    <!--DIY环形进度条-->
    <declare-styleable name="AttendanceProgressBar">
        <attr name="radius" format="dimension"/>
        <attr name="strokeWidth" format="dimension"/>
        <attr name="circleColor" format="color"/>
        <attr name="ringColor" format="color"/>
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>
    </declare-styleable>

    <style name="AppTheme1" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>//无标题
        <item name="android:windowActionBar">false</item>//无ActionBar
        <item name="android:windowFullscreen">true</item>//全屏即无通知栏
        <item name="android:windowContentOverlay">@null</item>//是否有遮盖
        <item name="android:windowBackground">@mipmap/wm_1</item>
    </style>

</resources>